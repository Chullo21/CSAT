@model PIMES_DMS.Models.AccountsModel

@{
    ViewData["Title"] = "CreateAdminView";
}

<div class="d-flex justify-content-center">
    <div>
        <h1>Create User</h1>
    </div>
</div>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="AccName" class="control-label"></label>
                <input asp-for="AccName" class="form-control" name="accname"/>
                <span asp-validation-for="AccName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CompName" class="control-label"></label>
                <input asp-for="CompName" class="form-control" name="compname"/>
                <span asp-validation-for="CompName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Role" class="control-label"></label>
                <select class="form-select" name="role">
                    <option value="CLIENT">CLIENT</option>
                    <option value="EMPLOYEE">EMPLOYEE</option>
                    <option value="ADMIN">ADMIN</option>
                </select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" name="username"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" name="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-primary w-50" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

