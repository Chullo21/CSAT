@model ERModel
@{
    ViewData["Title"] = "Containment Report >";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between">
        <div>
            <h1>Containment Report</h1>
        </div>
        <div class="align-self-center">
            <div>
                <label>Control No.</label>
                <input value="@Model.ControlNo" readonly />
            </div>
        </div>
    </div>

    <hr />

    <div>
        <table class="table table-responsive-mobile">
            <thead>
                <tr>
                    <th style="width:15%">PHASE</th>
                    <th style="width:25%">SOH</th>
                    <th style="width:25%">GOOD</th>
                    <th style="width:25%">NO GOOD</th>
                    <th style="width:25%">DISPOSITION</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>WHSE</th>
                    <td><input value="@Model.WHSESOH" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.WHSEGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.WHSENOGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.WHSEDis" class="form-control w-auto" readonly /></td>
                </tr>
                <tr>
                    <th>IQA</th>
                    <td><input value="@Model.IQASOH" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.IQASOH" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.IQANOGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.IQADis" class="form-control w-auto" readonly /></td>
                </tr>
                <tr>
                    <th>WIP</th>
                    <td><input value="@Model.WIPSOH" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.WIPGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.WIPNOGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.WIPDis" class="form-control w-auto" readonly /></td>
                </tr>
                <tr>
                    <th>FG</th>
                    <td><input value="@Model.FGSOH" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.FGGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.FGNOGOOD" class="form-control w-auto" type="number" readonly /></td>
                    <td><input value="@Model.FGDis" class="form-control w-auto" readonly /></td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="d-flex justify-content-evenly" style="height:200px">
        <div class="w-50 h-100">
            <div>
                <label class="fw-bold">Emergency Response</label>
            </div>
            <div>
                @{
                    string rep;
                    if (Model.Rep)
                    {
                        rep = "For Replacement";
                    }
                    else
                    {
                        rep = "No";
                    }
                }
                <label class="form-label mt-3">Need Replacement?</label>
                <input class="form-control" value="@rep" readonly />
            </div>
            <div class="mt-1 form-group">
                @{
                    string rma;
                    if (Model.RMAno != null)
                    {
                        rma = Model.RMAno;
                    }
                    else
                    {
                        rma = "No RMA # yet.";
                    }
                }
                <label class="form-label">RMA #</label>
                <input class="form-control w-50" value="@rma" readonly />
            </div>
        </div>
    </div>
</div>

