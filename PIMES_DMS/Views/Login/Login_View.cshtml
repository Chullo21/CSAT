
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PIMES_DMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PIMES_DMS.styles.css" asp-append-version="true" />
    <title>login - ATS QA</title>
</head>
<body>
    <div class="d-flex justify-content-center mt-5">
        <div>
            <h1>P. IMES - ATS QA</h1>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div style="border: 1px solid; height:250px; width:350px; border-radius:10%" class="d-flex justify-content-center">
            <div>
                <h3 class="mt-3">Welcome Back!</h3>
                <form class="d-flex justify-content-center flex-column" asp-controller="Login" asp-action="LoginAcc">                   
                    <input class="mt-4 text-center" placeholder="Username" name="user"/>
                    <input class="mt-3 text-center" placeholder="Password" type="password" name="pass"/>
                    <button class="mt-3">Login</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
