
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ATS QA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PIMES_DMS.styles.css" asp-append-version="true" />
    <title>login - ATS QA</title>
</head>
<body class="loginbg">
    <header>
        <div class="d-flex justify-content-between" style="border:1px solid; height:55px; background-color:#2706F0">
            <div class="align-self-center">
                <img style="height:30px; margin-inline:25px" src="~/photos/pimeslogo.png" />
            </div>
            <div class="align-self-center">
                <a class="text-white billsfont text-decoration-none" href="https://pimes.com.ph/">P. IMES CORP. - AUTOMATION TECHNOLOGY SOLUTIONS - QUALITY ASSURANCE</a>
            </div>
            <div class="align-self-center">
                <img style="height:30px; margin-inline:25px" src="~/photos/ats wbg.png" />
            </div>
        </div>
    </header>
    <div>
        <div class="d-flex justify-content-center" style="margin-top:50px">
            <div>
                <h1 class="loginfont">P. IMES - ATS QA</h1>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-5">
            <div style="border: 5px solid; height:250px; width:350px; border-radius:10%; background-color:white" class="d-flex justify-content-center">
                <div>
                    <h3 class="mt-3">Welcome Back!</h3>
                    <form class="d-flex justify-content-center flex-column" asp-controller="Login" asp-action="LoginAcc">
                        <input class="form-control mt-3 text-center" placeholder="Username" name="user" />
                        <input class="form-control mt-3 text-center" placeholder="Password" type="password" name="pass" />
                        <button class="btn btn-primary mt-3">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer class="loginfooter">
        <p class="mx-5 text-white">
            &copy; 2023 - P. IMES - ATS QA
        </p>
    </footer>
</body>
</html>
