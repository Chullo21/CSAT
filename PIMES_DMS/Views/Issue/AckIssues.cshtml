@model IEnumerable<PIMES_DMS.Models.IssueModel>

@{
    ViewData["Title"] = "On-Process";
}

<h1>On-Process Issues</h1>
<hr />

<div>
    <div class="form-control-lg w-100">
        <form asp-controller="Issue" asp-action="Search">
            <div class="d-flex">
                <div class="align-self-center">
                    <input class="form-control w-100" name="ss" placeholder="Search"/>
                </div>
                <div>
                    <input style="margin-left:5px" class="btn btn-primary" type="submit"/>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped text-center align-content-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IssueNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueCreator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffectedPN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th style="width:50px">
                @Html.DisplayNameFor(model => model.Acknowledged)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="height:30px">
                <td>
                    @Html.DisplayFor(modelItem => item.IssueNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueCreator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFound)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AffectedPN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Desc)
                </td>
                @{
                    if (item.Acknowledged)
                    {
                        <td style="background-color:limegreen">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </svg>
                        </td>
                    }
                    else
                    {
                        <td style="background-color:red">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                            </svg>
                        </td>
                    }
                }
                <td>
                    <a class="btn btn-primary" asp-controller="Issue" asp-action="IssueDetails" asp-route-id="@item.IssueID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
