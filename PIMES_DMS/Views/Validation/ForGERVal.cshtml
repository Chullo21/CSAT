@model IEnumerable<PIMES_DMS.Models.IssueModel>

@{
    ViewData["Title"] = "Verified Issues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-100 d-flex justify-content-between">
    <div style="width:80%">
        <h1>Verified Issues - Awaiting for Containment Report</h1>
    </div>
    <div class="d-flex justify-content-end mt-2" style="width:20%">
        <form asp-controller="Validation" asp-action="Search" method="get">
            <input class="form-control w-100 align-bottom" placeholder="Search" name="ss"/>
        </form>
    </div>
</div>
<hr />

<div>
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IssueCreator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IssueNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SerialNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ControlNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAck)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateVdal)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssueCreator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssueNo)
                    </td>
                    <td>
                        @item.DateCreated.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SerialNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ControlNumber)
                    </td>
                    <td>
                        @item.DateAck.ToShortDateString()
                    </td>
                    <td>
                        @item.DateVdal.ToShortDateString()
                    </td>
                    <td>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-primary" asp-controller="Validation" asp-action="ShowClientandQARep" asp-route-id="@item.IssueID">Details</a>&nbsp;
                            <a class="btn btn-success" asp-controller="ER" asp-action="Create_ContainmentView" asp-route-id="@item.IssueID">G.E.R.</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
