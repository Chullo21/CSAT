@model IEnumerable<IssueModel>

@{
    ViewData["Title"] = "Pending E.R.A";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string? Role = TempData["Role"] as string;
    TempData.Keep();

    var mod = Model.OrderByDescending(j => j.DateVdal);
}

@section scripts {
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" />
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                searching: true,
                lengthChange: false,
                pageLength: 7,
                order: [],
                ordering: false
            });
        });
    </script>
}

<div class="container">
    <div class="w-100 d-flex justify-content-between">
        <div style="width:80%">
            <h1>Pending - E.R.A</h1>
        </div>
    </div>
    <hr />

    <div>
        <table class="table table-striped table-bordered text-center" id="myTable">
            <thead>
                <tr>
                    <th class="desktop-only">
                        @Html.DisplayNameFor(model => model.IssueCreator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IssueNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product)
                    </th>
                    <th class="desktop-only">
                        @Html.DisplayNameFor(model => model.ControlNumber)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in mod)
                {
                    <tr>
                        <td class="desktop-only">
                            @Html.DisplayFor(modelItem => item.IssueCreator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product)
                        </td>
                        <td class="desktop-only">
                            @Html.DisplayFor(modelItem => item.ControlNumber)
                        </td>
                        <td>
                            <div class="d-flex justify-content-evenly">
                                @*<a class="btn btn-primary w-100" asp-controller="Validation" asp-action="ValidatedIssueDetail" asp-route-id="@item.IssueID">Details</a>&nbsp;*@
                                @{
                                    if (Role == "Admin")
                                    {
                                        <a class="btn btn-success w-100" asp-controller="ER" asp-action="Create_ContainmentView" asp-route-id="@item.IssueID">G.E.R.</a>
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>